<div {{ attributes }}>
    {{ form_start(form) }}
        {{ form_label(form.description) }}
        {{ form_row(form.description) }}
        <trix-editor
                input="{{ form.description.vars.id }}"
                class="trix-editor trix-content min-h-40 mb-4 block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500
            dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        ></trix-editor>

        {{ form_widget(form) }}



        <twig:Button
            formnovalidate
            variant="success"
            class="hover:animate-wiggle"
        >
            {{ button_label|default('Save') }}
        </twig:Button>
    {{ form_end(form) }}
</div>
